// Most used language

model Statistics {
  id                String @id @default(auto()) @map("_id") @db.ObjectId
  user              User   @relation(fields: [userId], references: [id])
  userId            String @unique @db.ObjectId
  totalComplaints   Int
  commonComplaints  Topics
}

enum Topics {
  Services
  Productsp
  Technical
  Billing
  Complaints
  Suggestions
}

model Languages {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  language String
}


